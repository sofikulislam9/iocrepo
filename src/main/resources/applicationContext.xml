<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean for EmailService -->
    <bean id="emailService" class="com.example.springioc.EmailService" />

    <!-- Bean for UserController with DI -->
    <bean id="userController" class="com.example.springioc.UserController">
        <property name="messageService" ref="emailService" />
    </bean>

</beans>
